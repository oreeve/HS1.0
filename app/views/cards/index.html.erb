<div class="container">
<h1>Card Search</h1>
<br>
<h4>Search By:</h4>
<ul class="nav nav-tabs form-tabs">
  <li class="active"><a href="#form1" data-toggle="tab">Name</a></li>
  <li><a href="#form2" data-toggle="tab">Class</a>
</ul>
<div class="tab-content">
  <fieldset id="form1" class="tab-pane active">
  <%= form_tag(action: "index") do %>
    <label for="name">Name</label>
    <%= text_field_tag :name %><br><br>
    <%= submit_tag('Search') %>
  <% end %>
  </fieldset>
  <fieldset id="form2" class="tab-pane">
    <%= form_tag(action: "index") do %>
      <label for="class">Class</label>
      <%= text_field_tag :class %><br><br>
      <%= submit_tag('Search') %>
    <% end %>
  </fieldset>
</div>

<br>

<% if @card %>
  <%= @card["name"] %><br><br>
  <img src="<%= @card["imgGold"] %>" alt="No Image Found" onError="this.src='http://www.hearthstonetopdecks.com/wp-content/uploads/2014/06/card-back-default.png';">
<% end %>

<% if @class_cards %>
  <p><%=@class_cards.length%> Cards Found </p>
  <ul style="list-style-type:none">
  <% @class_cards.each do |card|  %>
    <li class="col-md-4">
      <button data-toggle="modal" data-target="#<%=card["cardId"]%>"><%=card["name"]%></button>
      <div id="<%=card["cardId"]%>" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Card Info</h4>
            </div>
            <div class="modal-body">
              <img src="<%= card["imgGold"] %>" class="img-thumbnail" alt="No Image Found" onError="this.src='http://www.hearthstonetopdecks.com/wp-content/uploads/2014/06/card-back-default.png';">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
<% end %>
</div>
